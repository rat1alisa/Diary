{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "ESNext",
    "moduleResolution": "Node",            
    "rootDir": "src",             
    "outDir": "dist",              
    "strict": true,                
    "esModuleInterop": true,       
    "skipLibCheck": true,          
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],      
  "exclude": ["node_modules"]     
}